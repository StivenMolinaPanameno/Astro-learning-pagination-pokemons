---

    interface Props {
	    url: string;
	    name: string;
        isBig?: boolean;
    }
    const {url, name, isBig = false} = Astro.props;
    const id = url.split('/').at(-2);
    
    const img = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`; 

---

<!-- href={`/pokemon/${id}`}  -->
<!-- href={`/pokemons/${name}`}  -->
<a 
href={`/pokemons/${name}`}
class:list={[`rounded flex flex-col justify-center items-center p-2 `, {border: !isBig}]}
>
    <img 
    transition:name={`${name}-image`}
    src={img} alt={name}
    class:list={[
        {'w-26 h-26': isBig,
         'w-22 h-16': !isBig
        }
        ]}
    >
    <span class:list={[`capitalize`, {'text-4xl text-blue-500': isBig}]}>#{id} {name}</span>
    
</a>