---
import { ViewTransitions } from 'astro:transitions';
import {siteInfo} from '../consts/site-info';
import NavBar from '@components/shared/NavBar.astro'

interface Props {
    title?: string;
	image?: string;
	description?: string;
}

const {title = siteInfo.title, description = siteInfo.description, image} = Astro.props;
---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description}>

		<!-- OG METATAGS O -->
		<meta name="og:title" content={title}>
		<meta name="author" content="Ángel Stiven Molina Panameño">
		<meta name="og:description" content={description}>
		<meta name="og:image" content={image}>


		<title>{title}</title>
		<ViewTransitions></ViewTransitions>
	</head>
	<body class="bg-slate-800 text-slate-100 flex flex-col min-h-screen">
		<NavBar />
        <main class="mt-10 m-auto flex-grow w-full max-w-5xl px-4">
			<slot></slot>
		</main>
	</body>
</html>
